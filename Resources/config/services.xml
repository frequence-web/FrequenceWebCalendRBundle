<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="frequence_web_calendr.factory.class">CalendR\Calendar</parameter>
        <parameter key="frequence_web_calendr.event.manager.class">FrequenceWeb\Bundle\CalendRBundle\Event\Manager</parameter>
        <parameter key="frequence_web_calendr.twig_extension.class">FrequenceWeb\Bundle\CalendRBundle\Twig\CalendRExtension</parameter>
    </parameters>

    <services>
        <service id="frequence_web_calendr.event.manager" class="%frequence_web_calendr.event.manager.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="frequence_web_calendr.factory" class="%frequence_web_calendr.factory.class%">
            <call method="setEventManager">
                <argument type="service" id="frequence_web_calendr.event.manager" />
            </call>
        </service>

        <service id="calendr" alias="frequence_web_calendr.factory" />
        <service id="frequence_web_calendr.twig_extension" class="%frequence_web_calendr.twig_extension.class%">
            <argument type="service" id="frequence_web_calendr.factory" />
            <tag name="twig.extension" />
        </service>
    </services>

</container>
